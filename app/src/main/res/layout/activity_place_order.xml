<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlaceOrder">
    <ImageView
        android:id="@+id/ivGreenTick"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_green_tick"
        android:gravity="center_horizontal"

        app:layout_constraintBottom_toTopOf="@id/tvSuccsessMsg"
        android:layout_marginTop="200dp"
        />
    <TextView
        android:id="@+id/tvSuccsessMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Placed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_horizontal"

        app:layout_constraintTop_toBottomOf="@id/ivGreenTick"
        android:layout_marginTop="40dp"
        android:textColor="@color/black"
        android:textSize="28sp"
        />
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="order_placed for the one to for the one to for the one to for the one to for the one to "
        android:textSize="20sp"
        android:padding="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSuccsessMsg"
        android:textColor="@color/title_grey"
        android:gravity="center_horizontal"
        />

</androidx.constraintlayout.widget.ConstraintLayout>