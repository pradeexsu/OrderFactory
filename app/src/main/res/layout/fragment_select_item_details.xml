<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="50dp"
    android:background="@drawable/bg_bottom_sheet_dialog_fragment"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/tvSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/text_size"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        />
    <TextView
        android:id="@+id/tvKgs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kgs"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvSize"
        android:textSize="@dimen/text_size"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="40dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ltrs"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvKgs"
        android:textSize="@dimen/text_size"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="40dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSizeTypes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:listitem="@layout/item_type_size"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:itemCount="5"
        app:layout_constraintTop_toBottomOf="@id/tvSize"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        />
    <TextView
        android:id="@+id/tvAvailableQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available Quantity"
        app:layout_constraintTop_toBottomOf="@id/rvSizeTypes"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="55dp"
        android:layout_marginStart="20dp"
        />
    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tvAvailableQuantity"
        app:layout_constraintTop_toBottomOf="@id/rvSizeTypes"
        android:layout_marginTop="40dp"
        app:initialNumber="1"
        app:finalNumber="10"
        app:backGroundColor="#fafafa"
        app:textColor="#000000"
        app:textSize="10sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
    />
    <TextView
        android:id="@+id/tvPriceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price p.pc"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvAvailableQuantity"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:textSize="16sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â‚¹931"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvAvailableQuantity"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="50dp"
        />
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAllCaps="false"
        android:text="Save to list"
        android:backgroundTint="#000"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginHorizontal="20dp"
        app:cornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvPriceTitle"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>